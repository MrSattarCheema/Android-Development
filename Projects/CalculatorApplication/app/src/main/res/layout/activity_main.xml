<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/wal2">

    <TextView
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text=""
        android:textSize="40dp"
        android:layout_margin="10dp"
        android:gravity="end|bottom"
        android:textColor="@color/white"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/wallpaper1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"
            >
            <Button
                android:id="@+id/seven"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7"
                android:textSize="30dp"
                android:layout_margin="2dp"
                android:backgroundTint="#00b4d8"
                android:onClick="onDigit"
                />
            <Button
                android:id="@+id/eight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8"
                android:textSize="30dp"
                android:layout_margin="2dp"
                android:backgroundTint="#00b4d8"
                android:onClick="onDigit"
                />
            <Button
                android:id="@+id/nine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9"
                android:textSize="30dp"
                android:layout_margin="2dp"
                android:backgroundTint="#00b4d8"
                android:onClick="onDigit"
                />
            <Button
                android:id="@+id/divide"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="/"
                android:textSize="30dp"
                android:layout_margin="2dp"
                android:backgroundTint="#d90429"
                android:onClick="onOperator"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"
            >
            <Button
                android:id="@+id/four"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4"
                android:textSize="30dp"
                android:layout_margin="2dp"
                android:backgroundTint="#0096c7"
                android:onClick="onDigit"
                />
            <Button
                android:id="@+id/five"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5"
                android:textSize="30dp"
                android:layout_margin="2dp"
                android:backgroundTint="#0096c7"
                android:onClick="onDigit"
                />
            <Button
                android:id="@+id/six"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6"
                android:textSize="30dp"
                android:layout_margin="2dp"
                android:backgroundTint="#0096c7"
                android:onClick="onDigit"
                />
            <Button
                android:id="@+id/multiply"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="*"
                android:textSize="30dp"
                android:layout_margin="2dp"
                android:backgroundTint="#d90429"
                android:onClick="onOperator"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"
            >
            <Button
                android:id="@+id/one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"
                android:textSize="30dp"
                android:layout_margin="2dp"
                android:backgroundTint="#0077b6"
                android:onClick="onDigit"
                />
            <Button
                android:id="@+id/two"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2"
                android:textSize="30dp"
                android:layout_margin="2dp"
                android:backgroundTint="#0077b6"
                android:onClick="onDigit"
                />
            <Button
                android:id="@+id/three"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3"
                android:textSize="30dp"
                android:layout_margin="2dp"
                android:backgroundTint="#0077b6"
                android:onClick="onDigit"
                />
            <Button
                android:id="@+id/minus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#d90429"
                android:text="-"
                android:textSize="30dp"
                android:layout_margin="2dp"
                android:onClick="onOperator"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"
            >
            <Button
                android:id="@+id/zero"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0"
                android:textSize="30dp"
                android:layout_margin="2dp"
                android:backgroundTint="#023e8a"
                android:onClick="onDigit"
                />
            <Button
                android:id="@+id/zero"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="."
                android:textSize="30dp"
                android:layout_margin="2dp"
                android:backgroundTint="#023e8a"
                android:onClick="onDecimal"
                />
            <Button
                android:id="@+id/clear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:text="CLR"
                android:textSize="30dp"
                android:layout_margin="2dp"
                android:backgroundTint="#d90429"
                android:onClick="onClr"
                />

            <Button
                android:id="@+id/plus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+"
                android:textSize="30dp"
                android:layout_margin="2dp"
                android:backgroundTint="#d90429"
                android:onClick="onOperator"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"
            >
            <Button
                android:id="@+id/equal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="="
                android:textSize="30dp"
                android:layout_margin="2dp"
                android:backgroundTint="#d90429"
                android:onClick="onEqual"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>